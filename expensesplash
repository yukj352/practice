import 'package:final_cal/SignUpPage.dart';
import 'package:flutter/material.dart';
class ExpensetrackerSplashScreen extends StatefulWidget {
  const ExpensetrackerSplashScreen({super.key});

  @override
  State<ExpensetrackerSplashScreen> createState() => _ExpensetrackerSplashScreenState();
}

class _ExpensetrackerSplashScreenState extends State<ExpensetrackerSplashScreen> {
  @override
  void initState(){
    super.initState();
    Future.delayed(Duration(seconds:2),(){
      Navigator.pushReplacement(context, MaterialPageRoute(builder: (context)=>SignupPage()),);
    });
}

  @override
  Widget build(BuildContext context) {
    return Scaffold(
          backgroundColor: Color(0xFFFAEDE0),
          body: Center(
            child: Column(
              mainAxisAlignment: MainAxisAlignment.center,
              children: [
                   CircleAvatar(
                      radius: 70,
                  backgroundImage: AssetImage('assets/icon.png'),),

                Padding(
                  padding: const EdgeInsets.symmetric(vertical: 30),
                  child: SizedBox(
                    height: 100,
                    child: Text("FinFlow",style: TextStyle(fontSize: 30,fontWeight: FontWeight.w700,color: Color(0xFFB44FD1)),
                    ),
                  ),
                ),
                Padding(
                  padding: const EdgeInsets.symmetric(vertical: 40),
                  child: CircularProgressIndicator(
                    valueColor:AlwaysStoppedAnimation(Color(0xFFB44FD1)),
                    strokeWidth: 5,

                  ),
                ),
              ],
            ),
          ),

      );
  }
}







